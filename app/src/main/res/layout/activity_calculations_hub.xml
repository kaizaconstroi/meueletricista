<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cinza">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_calc_hub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtMenuCorrente"
                android:onClick="openCorrente"
                android:contentDescription="@string/txtMenuCorrente" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtMenuPotencia"
                android:onClick="openPotencia"
                android:contentDescription="@string/txtMenuPotencia"
                android:layout_marginTop="12dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtMenuQuedaTensao"
                android:onClick="openQueda"
                android:contentDescription="@string/txtMenuQuedaTensao"
                android:layout_marginTop="12dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtMenuCondutor"
                android:onClick="openCondutor"
                android:contentDescription="@string/txtMenuCondutor"
                android:layout_marginTop="12dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtMenuCondutorDisjuntor"
                android:onClick="openCondutorDisjuntor"
                android:contentDescription="@string/txtMenuCondutorDisjuntor"
                android:layout_marginTop="12dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtMenuDisjuntor"
                android:onClick="openDisjuntor"
                android:contentDescription="@string/txtMenuDisjuntor"
                android:layout_marginTop="12dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dimensionamento de Iluminação"
                android:onClick="openIluminacaoResidencial"
                android:contentDescription="Tomadas e Iluminação"
                android:layout_marginTop="12dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtMenuGerador"
                android:onClick="openGerador"
                android:contentDescription="@string/txtMenuGerador"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
