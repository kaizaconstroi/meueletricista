<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cinza">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_lighting_sizing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Iluminação"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/primaryColor"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calcule a potência mínima instalada de iluminação conforme NBR 5410. Informe a área (m²)."
                        android:textColor="#000000"
                        android:paddingBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Área (m²)">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button"
                        android:id="@+id/btn_calcular_iluminacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calcular Iluminação" />

                    <TextView
                        android:id="@+id/text_resultado_iluminacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:paddingTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Introdução ao Projeto Luminotécnico -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Introdução ao Projeto Luminotécnico"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/primaryColor"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aprenda passo a passo: escolha o nível de lux conforme o ambiente, calcule lúmens (área × lux), selecione lâmpadas (LED) e considere altura do teto, refletância das paredes, camadas de iluminação e temperatura de cor."
                        android:textColor="#000000"
                        android:paddingBottom="12dp" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Como usar (guia)"
                        android:onClick="openLightingIntro" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Projeto Luminotécnico Profissional -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Projeto Luminotécnico Profissional"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/primaryColor"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calcule o fluxo luminoso (lúmens) a partir da área e do nível de lux desejado. Ajuste por altura de teto e refletância das superfícies."
                        android:textColor="#000000"
                        android:paddingBottom="12dp" />

                    <Spinner
                        android:id="@+id/spinner_ambiente_iluminacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Área (m²)">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_area_design"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lux desejado (lx)">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_lux"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Altura do teto (m)">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_altura_teto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/spinner_refletancia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lúmens por lâmpada (ex.: 800)">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_lumens_lampada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="800" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button"
                        android:id="@+id/btn_calcular_projeto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calcular Projeto" />

                    <TextView
                        android:id="@+id/text_resultado_projeto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:paddingTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
