<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cinza">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_power"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primaryColor"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/edu_power_title"
        app:titleTextColor="@color/branco" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:strokeColor="@color/primaryColor"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edu_power_intro_title"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/branco" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edu_power_intro_desc"
                        android:textColor="@color/branco"
                        android:paddingTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:strokeColor="@color/primaryColor"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edu_power_examples_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/branco" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edu_power_examples_desc"
                        android:textColor="@color/branco"
                        android:paddingTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="80dp">

                <Button
                    android:id="@+id/btn_prev_resistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:contentDescription="@string/edu_power_back_desc"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp"
                    android:onClick="openResistanceConcept"
                    style="@style/BtnCutLeft" />

                <Button
                    android:id="@+id/btn_next_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:contentDescription="@string/edu_power_next_desc"
                    android:textAllCaps="false"
                    android:layout_marginStart="8dp"
                    android:onClick="openCurrentConcept"
                    style="@style/BtnCutRight" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
